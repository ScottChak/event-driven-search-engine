@page "/search"

@using SearchEngine.Blog.Domain
@using SearchEngine.Blog.Interfaces

@inject IArticleSummarySearchService articleSummarySearchService

<h1>Search Articles forecast</h1>

@if (articleSummaries == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Author</th>
                <th>Title</th>
                <th>Publication Date (UTC)</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var articleSummary in articleSummaries)
            {
                <tr>
                    <td>@articleSummary.Author</td>
                    <td>@articleSummary.Title</td>
                    <td>@articleSummary.PublicationUtcDate</td>
                    <td>@articleSummary.Description</td>
                </tr>
            }
        </tbody>
    </table>
}

@functions {
    IEnumerable<ArticleSummary> articleSummaries;
    
    protected override async Task OnInitAsync()
    {
        articleSummaries = await articleSummarySearchService.SearchArticleSummariesAsync(string.Empty).ConfigureAwait(false);
    }
}
